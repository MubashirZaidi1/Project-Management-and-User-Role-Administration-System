    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <a class="nav-link" href="/logout">Logout</a>
      </li>
    </ul>>
  </nav>

    <div class="login-container">               <!--used to add the login form into a card form-->
        <h2 class="text-center">Delete Task</h2>      <!--used to add the heading of the login form-->
        <% if (locals.message) { %>
          <center><p style="color: red; font-weight: bold;"><%= message %></p></center>
        <% } %>
     
        <form action="/delete-task" method="POST">
            <label for="ticket"><strong>Projects & Tickets</strong></label>
            <div class="form-group">
                <% let currentProject = null; %>

                <% tickets.forEach((ticket) => {
                  if (ticket.project_name !== currentProject) { %>
                    <% if (currentProject) { %></ul><% } %>
                    <h4><%= ticket.project_name %></h4>
                    <ul>
                    <% currentProject = ticket.project_name;
                  } %>
                  <li>Ticket Number: <%= ticket.ticket_no %></li>
                <% }); %>
                <% if (currentProject) { %></ul><% } %>
                
            </div>
              
              <div class="form-group">
                <label for="userTicketNo">User Ticket Number:</label>
                <input type="text" class="form-control" id="userTicketNo" name="userTicketNo">
              </div>
              
              <center><button type="submit" class="btn btn-primary">Submit</button></center>
            </div>
        </form>
    </div>

    <footer class="footer">
        <a href="https://www.facebook.com" target="_blank"><i class="fab fa-facebook-square fa-2x"></i></a>
        <a href="https://www.instagram.com" target="_blank"><i class="fab fa-instagram-square fa-2x"></i></a>
    </footer>

</body>

</html>
