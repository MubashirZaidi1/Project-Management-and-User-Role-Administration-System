<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Delete Project</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Manager Portal</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/managerportal">Projects</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/create-project">Create Project</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/delete-project">Delete Project</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/create-team">Create Team</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/manager_projects">All Projects</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/assign-task">Assign Task</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/delete-task">Delete Task</a>
        </li>
      </ul>
    </div>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <a class="nav-link" href="/logout">Logout</a>
      </li>
    </ul>>
  </nav>
  
  <div class="container">
    <h1 class="mt-4">Delete Project</h1>

    <% if (projects.length === 0) { %>
      <p>No projects available to delete.</p>
    <% } else { %>
      <form method="POST" action="/delete-project">
        <div class="form-group">
          <label for="projectId">Select a project to delete:</label>
          <select class="form-control" name="projectId" id="projectId">
            <% projects.forEach(function(project) { %>
              <option value="<%= project.project_id %>"><%= project.project_name %></option>
            <% }); %>
          </select>
        </div>
        <button type="submit" class="btn btn-danger">Delete Project</button>
      </form>
    <% } %>

    <a href="/managerportal" class="btn btn-primary mt-3">Go back to homepage</a>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
