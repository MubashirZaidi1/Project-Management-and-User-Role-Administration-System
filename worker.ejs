    <h1><%= worker.name %> Information</h1>
    <table class="table table-bordered">
      <tr>
        <th>Name</th>
        <td><%= worker.name %></td>
      </tr>
      <tr>
        <th>Gender</th>
        <td><%= worker.gender %></td>
      </tr>
      <tr>
        <th>Category</th>
        <td><%= worker.category %></td>
      </tr>
      <tr>
        <th>Username</th>
        <td><%= worker.username %></td>
      </tr>
      <tr>
        <th>Email</th>
